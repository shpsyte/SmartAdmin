@using SmartAdmin.Models.ManageViewModels
@model IndexViewModel

<div id="content">
    <div class="well well-light">
        <span class="text-success">@ViewData["StatusMessage"]</span>

        <dl class="dl-horizontal">

            <dt> @Localizer["Senha"]   </dt>
            <dd>
                @if (Model.HasPassword)
                {
                    <a asp-controller="Manage" asp-action="ChangePassword" class="btn btn-labeled btn-info">
                        <span class="btn-label"><i class="fa fa-key"></i></span> @Localizer["Mudar"]
                    </a>
                }
                else
                {
                    <a asp-controller="Manage" asp-action="SetPassword" class="btn btn-labeled btn-info">
                        <span class="btn-label"><i class="fa fa-key"></i></span> @Localizer["Criar"]
                    </a>
                }
            </dd>
            <dd class="note">Mude sua senha para proteger sua conta</dd>
            <dd> <br /> </dd>



            <dt> <span>@Localizer["Login's Externos:"]</span> </dt>
            <dd>
                <a asp-controller="Manage" asp-action="ManageLogins" class="btn btn-labeled btn-info">
                    <span class="btn-label"><i class="fa fa-facebook"></i></span> @Localizer["Gerenciar"]
                </a>
            </dd>
            <dd class="note">@Localizer["Você tem"] @Model.Logins.Count() @Localizer["perfis vinculados"]</dd>
            <dd><br /></dd>


            <dt> @Localizer["Celular:"]</dt>
            <dd>
                @if (Model.PhoneNumber != null)
                {
                    <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn btn-labeled btn-info">
                        <span class="btn-label"><i class="fa fa-mobile-phone"></i></span> @Localizer["Mudar"]
                    </a>
                    <form asp-controller="Manage" asp-action="RemovePhoneNumber" method="post">
                        <button type="submit" class="btn btn-labeled btn-danger"><span class="btn-label"><i class="fa fa-remove"></i></span> @Localizer["Remover"]</button>
                    </form>
                }
                else
                {

                    <a asp-controller="Manage" asp-action="AddPhoneNumber" class="btn btn-labeled btn-info">
                        <span class="btn-label"><i class="fa fa-mobile-phone"></i></span> @Localizer["Adicionar"]
                    </a>

                }

            </dd>
            <dd class="note">
                @Localizer["Número de telefone são usados para habilitar um segundo fator de autenticação. É altamente recomendável este nível de segurança, habilite nas configurações de conta"]
            </dd>
            <dd> <br /> </dd>
            <dt>@Localizer["Autenticação dois fatores"]:</dt>
            <dd>

                @if (Model.TwoFactor)
                {
                    <form asp-controller="Manage" asp-action="DisableTwoFactorAuthentication" method="post" class="form-horizontal">
                        <button type="submit" class="btn btn-labeled btn-danger"><span class="btn-label"><i class="fa fa-remove"></i></span> @Localizer["Disable"]</button>
                    </form>
                }
                else
                {
                    <form asp-controller="Manage" asp-action="EnableTwoFactorAuthentication" method="post" class="form-horizontal">
                        <button type="submit" class="btn btn-labeled btn-success"><span class="btn-label"><i class="fa fa-check"></i></span> @Localizer["Enable"]</button>
                    </form>
                }
            </dd>
            <dd class="note">
                @Localizer["Autenticação em dois fatores aumenta a segurança da sua conta, porém a um atraso no login, pois exigirá a confirmação via fone"]

            </dd>
        </dl>

    </div>
</div>


