                            <th data-hide="phone"><i class="fa fa-fw fa-check text-muted hidden-md hidden-sm hidden-xs"></i> @Localizer["Ativo"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Stages)
                        {
                            <tr class="@(!item.Active ? "txt-inactive" : "")">
                                <td>@item.PipelineId </td>
                                <td><a asp-action="Edit" asp-controller="Stage" asp-route-id="@item.StageId">  @item.Name   </a> </td>
                                <td>@item.Active</td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        }




