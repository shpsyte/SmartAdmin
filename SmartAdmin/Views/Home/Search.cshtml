    <script>
        tableSetting.tableInit("resultTable", 50);
        tableSetting.tableInit("resultTableStage", 50);
        tableSetting.tableInit("resultTableContact", 50);
        tableSetting.tableInit("resultTableCompany", 50);
        tableSetting.tableInit("resultTableDeal", 50);
        

